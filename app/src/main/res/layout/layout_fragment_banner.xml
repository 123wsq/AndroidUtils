<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_public_titlebar"></include>
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:indicator_drawable_unselected="@drawable/image_indicator_default"
        app:indicator_drawable_selected="@drawable/image_indicator_selector"
        app:indicator_margin="5dp"
        app:image_scale_type="center_crop"
        app:title_height="0dp"
        />
</LinearLayout>
