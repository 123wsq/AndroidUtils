<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="水印图"
                android:gravity="center_horizontal"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_new_year"/>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_2"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:background="@color/color_white"
                >
                <TextView
                    android:id="@+id/tv_center_water"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="中间"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_left_top_water"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="左上"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_right_top_water"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="右上"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_left_down_water"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="左下"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_right_down_water"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="右下"
                    android:gravity="center"
                    />
            </LinearLayout>

            </RelativeLayout>


</LinearLayout>
